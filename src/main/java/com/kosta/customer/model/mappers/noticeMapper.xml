<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kosta.customer.model.NoticeDAO">
	<insert id="noticeWrite">
		INSERT INTO NOTICE (TITLE, REGDATE, ArticleNumber, CONTENT) VALUES (#{title}, SYSDATE, NOTICE_SEQ.NEXTVAL, #{content})
	</insert>
	<select id="noticeList" resultType="com.kosta.customer.model.NoticeVO">	
		SELECT * FROM NOTICE ORDER BY ARTICLENUMBER DESC
	</select>
	<select id="detailView" resultType="com.kosta.customer.model.NoticeVO">	
		SELECT * FROM NOTICE WHERE articleNumber = ${articleNumber}
	</select>
	
</mapper>
